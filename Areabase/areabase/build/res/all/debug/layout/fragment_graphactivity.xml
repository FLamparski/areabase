<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="lamparski.areabase.GraphActivity$PlaceholderFragment">

    <TextView
        android:id="@+id/subject_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBJECT NAME"
        android:fontFamily="sans-serif-condensed"
        android:layout_margin="8dp"
        style="@android:style/TextAppearance.Holo.SearchResult.Title" />


    <View
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:orientation="vertical">

        <com.echo.holographlibrary.BarGraph
            android:layout_width="fill_parent"
            android:layout_height="@dimen/chart_view_height"
            android:id="@+id/graph_activity_bargraph"/>

        <ListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginTop="8dp"
            android:id="@+id/graph_activity_legend_list">

        </ListView>
    </LinearLayout>

</LinearLayout>

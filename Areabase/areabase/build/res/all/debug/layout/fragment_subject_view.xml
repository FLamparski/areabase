<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AreaActivity">

    <TextView
        android:id="@+id/subject_view_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBJECT NAME"
        android:fontFamily="sans-serif-condensed"
        android:layout_margin="8dp"
        style="@android:style/TextAppearance.Holo.SearchResult.Title" />

    <View
        android:background="@android:color/holo_blue_dark"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>


    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/subject_view_progress_bar"
        android:layout_marginTop="-7dp"/>

    <ExpandableListView
        android:id="@+id/subject_view_expandable_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fastScrollEnabled="true"
        android:fastScrollAlwaysVisible="true"/>
</LinearLayout><!-- From: file:/C:/Users/Minkovsky/areabase/Areabase/areabase/src/main/res/layout/fragment_subject_view.xml -->